{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "dist/out",
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "removeComments": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ]
}
